<!DOCTYPE html>

<html>
  <head>
    <title>Fly helper</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- CSS Reset -->
    <link rel="stylesheet" href="//cdn.rawgit.com/necolas/normalize.css/master/normalize.css">
    <!-- Milligram CSS minified -->
    <link rel="stylesheet" href="//cdn.rawgit.com/milligram/milligram/master/dist/milligram.min.css">
  </head>

  <body>
    <header>
      <font size ="+2">
      <% if current_user %>
          Hi <%= current_user.name %>
          |
          <% if current_user.us_role == 2 %>
            <%= link_to 'Users', users_path %> |
            <%= link_to 'Airplanes', airplanes_path %> |
            <%= link_to 'Airports', airports_path %> |
            <%= link_to 'Payments', payments_path %> |
            <%= link_to 'Flights', flights_path %> |
            <%= link_to 'Reservations', reservations_path %> |
            <%= link_to 'Settings', user_path(current_user.id) %> |
            <%= link_to 'Log out', logout_path, method: :delete %>
            <hr>
          <% else %>
            <%= link_to 'Settings', user_path(current_user.id) %> |
            <%= link_to 'Log out', logout_path, method: :delete %>
          <% end %>
        <% else %>
          <%= link_to 'Log in', login_path %>
          |
          <%= link_to 'Sign up', new_user_path %>
          <hr>
      <% end %>
    </font>
    </header>
    <%= yield %>
  </body>
</html>
