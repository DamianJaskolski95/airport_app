<p id="notice"><%= notice %></p>

<% if current_user.us_role == 2 %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Email</th>
        <th>Pesel</th>
        <th>ID number</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @user.name %></td>
        <td><%= @user.surname %></td>
        <td><%= @user.email %></td>
        <td><%= @user.pesel %></td>
        <td><%= @user.id_number %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %> |
  <%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
<% elsif current_user.us_role == 1 and current_user.id == @user.id%>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Email</th>
        <th>Pesel</th>
        <th>ID number</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @user.name %></td>
        <td><%= @user.surname %></td>
        <td><%= @user.email %></td>
        <td><%= @user.pesel %></td>
        <td><%= @user.id_number %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
