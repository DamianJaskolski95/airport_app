<p id="notice"><%= notice %></p>

<h1>Airplanes</h1>

<% if current_user.us_role == 2 %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Airlines</th>
        <th>Model</th>
        <th>Capacity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @airplanes.each do |airplane| %>
        <tr>
          <td><%= link_to airplane.id, airplane %></td>
          <td><%= airplane.airlines %></td>
          <td><%= airplane.model %></td>
          <td><%= airplane.capacity %></td>
          <td><%= link_to 'Show', airplane %></td>
          <td><%= link_to 'Edit', edit_airplane_path(airplane) %></td>
          <td><%= link_to 'Destroy', airplane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Airplane', new_airplane_path %>
<%end%>