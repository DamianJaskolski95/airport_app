<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<% if current_user.us_role == 2 %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Airplane</th>
        <th>Source Airport</th>
        <th>Destination Airport</th>
        <th>Payment</th>
        <th>Flight date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @flights.each do |flight| %>
        <tr>
          <td><%= link_to flight.id, flight%></td>
          <td><%= link_to flight.airplane_id, flight.airplane %></td>
          <td><%= link_to flight.airport_source_id, flight.airport_source %></td>
          <td><%= link_to flight.airport_dest_id, flight.airport_dest %></td>
          <td><%= link_to flight.payment_id, flight.payment %></td>
          <td><%= flight.fl_date %></td>
          <td><%= link_to 'Show', flight %></td>
          <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
          <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Flight', new_flight_path %>
<%end%>
