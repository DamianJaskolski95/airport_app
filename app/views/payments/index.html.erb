<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<% if current_user.us_role == 2 %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Cost</th>
        <th>Currency</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @payments.each do |payment| %>
        <tr>
          <td><%= link_to payment.id, payment%></td>
          <td><%= payment.flight_cost %></td>
          <td><%= payment.currency %></td>
          <td><%= link_to 'Show', payment %></td>
          <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
          <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
  <br>
<%= paginate @payments %>
  <%= link_to 'New Payment', new_payment_path %>
<%end%>
